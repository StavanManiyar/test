# Production Environment Variables for VPS Deployment
# Copy this file to .env when deploying to VPS

# Django Settings
SECRET_KEY=generate-a-new-secret-key-for-production
DEBUG=False

# Database Configuration (PostgreSQL on VPS)
DATABASE_URL=postgres://username:password@localhost/database_name

# VPS Server Configuration
VPS_SERVER_IP=your.vps.ip.address

# Security Settings (enable when SSL is configured)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Supabase Configuration (COMMENTED OUT - use local PostgreSQL instead)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-supabase-anon-key

# Render Configuration (COMMENTED OUT - use VPS instead)
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com
